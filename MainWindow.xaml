                <TreeView x:Name="dbFoldersItem" Grid.Row="1" Grid.Column="0" SelectedItemChanged="DbFoldersItem_SelectedItemChanged" Width="Auto" >
                    <TreeView.ItemContainerStyle>
                        <Style TargetType="TreeViewItem">
                            <EventSetter Event="Selected" Handler="DbFoldersItem_Selected"/>
                        </Style>
                    </TreeView.ItemContainerStyle>
                    <TreeView.Resources>
                        <Style TargetType="{x:Type TreeViewItem}">
                            <Setter Property="HeaderTemplate">
                                <Setter.Value>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Image Name="imgFolder"  MaxWidth="20" MaxHeight="20" Stretch="Uniform"
                                                Source="{Binding 
                                                    RelativeSource={RelativeSource 
                                                                    Mode=FindAncestor, 
                                                                    AncestorType={x:Type TreeViewItem}}, 
                                                    Path=Tag, 
                                                    Converter={x:Static local:PathToIconConverter.Instance}}"       
                                            />
                                            <TextBlock Text="{Binding}" Margin="5,0" />
                                        </StackPanel>
                                    </DataTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TreeView.Resources>
                </TreeView>
            </TabItem>
